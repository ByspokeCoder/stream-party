generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserIntegration {
  id            String   @id @default(cuid())
  userId        String   // Clerk user ID
  platform      String   // e.g., "youtube", "twitch", "custom"
  encryptedToken String  // AES-256 encrypted token
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, platform])
  @@index([userId])
}

model SelectedSubscription {
  id            String   @id @default(cuid())
  userId        String   // Clerk user ID
  platform      String   // e.g., "youtube"
  subscriptionId String  // Platform-specific subscription/channel ID
  selected      Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, platform, subscriptionId])
  @@index([userId, platform])
}

